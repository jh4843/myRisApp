        <Separator Margin="10,0,0,10" />

        <!--  Clients Access Registration  -->
        <Expander
            x:Name="expServerAccess"
            FontWeight="Bold"
            Header=" Exclude hosts">
            <StackPanel Margin="5">
                <Grid Margin="10,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Calling AE Title :" />
                    <TextBlock Grid.Row="1" Text="Host Name :" />
                    <TextBox
                        x:Name="tbxCallingAETitle"
                        Grid.Column="1"
                        Margin="0,0,0,3" />
                    <TextBox
                        x:Name="tbxClientHostName"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,0,0" />
                    <StackPanel
                        x:Name="stkpBtnList"
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btnAdd"
                            Margin="0,2,1,0"
                            Padding="1"
                            Style="{StaticResource myFlatImgButtonStyle}"
                            ToolTip="Add">
                            <Image Margin="2" Source="pack://application:,,,/myRis.Web.Scp.CommonUI;component/Images/Add.png" />
                        </Button>
                        <Button
                            x:Name="btnEdit"
                            Margin="1,2,1,0"
                            Style="{StaticResource myFlatImgButtonStyle}"
                            ToolTip="Edit"
                            Visibility="Collapsed">
                            <Image Margin="2" Source="pack://application:,,,/myRis.Web.Scp.CommonUI;component/Images/Edit.png" />
                        </Button>
                        <Button
                            x:Name="btnDelete"
                            Margin="1,2,1,0"
                            Style="{StaticResource myFlatImgButtonStyle}"
                            ToolTip="Delete"
                            Visibility="Collapsed">
                            <Image Margin="2" Source="pack://application:,,,/myRis.Web.Scp.CommonUI;component/Images/Delete.png" />
                        </Button>
                        <!--  Button OK & Cancel  -->
                        <Button
                            x:Name="btnOk"
                            Margin="1,2,1,0"
                            Style="{StaticResource myFlatImgButtonStyle}"
                            ToolTip="Apply"
                            Visibility="Collapsed">
                            <Canvas
                                Width="25"
                                Height="30"
                                Margin="-6,-1,2,-2">
                                    <Line
                                            Margin="-1,-2,0,0"
                                            Stroke="#FFc7c7c7"
                                            StrokeThickness="0.75"
                                            X1="10"
                                            X2="17"
                                            Y1="13"
                                            Y2="20" />
                                    <Line
                                        Margin="-1,-2,0,0"
                                        Stroke="#FFb2b2b2"
                                        StrokeThickness="0.75"
                                        X1="10"
                                        X2="17"
                                        Y1="13"
                                        Y2="20" />
                                    <Line
                                        Margin="-1,-2,0,0"
                                        Stroke="#FFc7c7c7"
                                        StrokeThickness="0.75"
                                        X1="17"
                                        X2="24"
                                        Y1="20"
                                        Y2="5" />
                                    <Line
                                        Margin="-1,-2,0,0"
                                        Stroke="#FFb2b2b2"
                                        StrokeThickness="0.75"
                                        X1="17"
                                        X2="24"
                                        Y1="20"
                                        Y2="5" />   
                            </Canvas>
                        </Button>
                        <Button
                            x:Name="btnCancel"
                            Margin="1,2,1,0"
                            Style="{StaticResource myFlatImgButtonStyle}"
                            ToolTip="Cancel"
                            Visibility="Collapsed">
                            <Canvas
                                Width="25"
                                Height="30"
                                Margin="-6,-1,2,-2">
                                <Line
                                    Margin="-1.8,-2,0,0"
                                    Stroke="#FFc7c7c7"
                                    StrokeThickness="0.75"
                                    X1="12"
                                    X2="24"
                                    Y1="8"
                                    Y2="20" />
                                <Line
                                    Margin="-1.8,-2,0,0"
                                    Stroke="#FFb2b2b2"
                                    StrokeThickness="0.75"
                                    X1="12"
                                    X2="24"
                                    Y1="8"
                                    Y2="20" />
                                <Line
                                    Margin="-1.8,-2,0,0"
                                    Stroke="#FFc7c7c7"
                                    StrokeThickness="0.75"
                                    X1="12"
                                    X2="24"
                                    Y1="20"
                                    Y2="8" />
                                <Line
                                    Margin="-1.8,-2,0,0"
                                    Stroke="#FFb2b2b2"
                                    StrokeThickness="0.75"
                                    X1="12"
                                    X2="24"
                                    Y1="20"
                                    Y2="8" />
                            </Canvas>
                        </Button>
                    </StackPanel>
                </Grid>

                <!--  Client Access  -->
                <CheckBox
                    x:Name="cbxServerAccess"
                    Margin="13,0,2,10"
                    Padding="10,0,0,0"
                    Content="{Binding ServerAccessMsg}"
                    IsChecked="False" />

                <ListView
                    x:Name="lstClientInfo"
                    Height="125"
                    Margin="10,0,2,10"
                    ItemsSource="{Binding ClientInfoList}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding client_ae_title}" Header="{StaticResource langServerLstvAETitle}" />
                            <GridViewColumn DisplayMemberBinding="{Binding client_host_name}" Header="{StaticResource langServerLstvHostName}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Expander>
    
        <Separator Margin="10,0,0,10" />

        <!--  Misc. -->
        <TextBlock FontWeight="Bold" Text="Miscellaneous options" />
        <Grid Margin="10,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="Log level" Grid.Row="0" Margin="0, 3"/>
            <ComboBox
                x:Name="cbxLogLevel"
                ItemsSource="{Binding LogLevelList}"
                Visibility="Visible"
                Grid.Row="1 ">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Text="Default specific character set" Grid.Row="2" Margin="0, 3"/>
            <ComboBox
                x:Name="cbxCharSet"
                ItemsSource="{Binding CharacterSets}"
                Visibility="Visible"
                Grid.Row="3">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" ToolTip="{Binding Description}">
                            <TextBlock Text="{Binding DisplayCharacterSet}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <Separator Margin="10,0,0,10" />
        
        <Grid Margin="10,0,0,10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*" />
                <ColumnDefinition Width="0.25*" />
                <ColumnDefinition Width="0.25*" />
                <ColumnDefinition Width="0.25*" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="btnSaveServer"
                Grid.Column="3"
                Height="33"
                Margin="1,0"
                Content="       Save       " />
        </Grid>

